{
  "name": "@compositor/gen",
  "version": "1.0.0-4",
  "description": "Compositor JSX static site generator",
  "main": "lib/index.js",
  "bin": {
    "gen": "./lib/cli.js"
  },
  "scripts": {
    "build": "./lib/cli.js examples --out-dir .site",
    "start": "./lib/cli.js examples -Do --port 9000 --library glamorous",
    "test": "nyc ava",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix -t verbose",
    "cruiser": "npx dependency-cruiser --validate .dependency-cruiser.json --ts-config=./tsconfig.json src",
    "fmt": "prettier --write src/**/*.ts src/**/*.tsx",
    "build:dev": "tsc -p ./tsconfig.json --watch",
    "visualize": "madge src/index.ts --image output.png",
    "format": "prettier --write src/**/*.ts src/**/*.tsx"
  },
  "keywords": [
    "compositor",
    "static-site",
    "JSX",
    "markdown",
    "React"
  ],
  "author": "Brent Jackson",
  "license": "MIT",
  "dependencies": {
    "@compositor/webfont": "^1.0.0-1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-standalone": "^6.26.0",
    "chalk": "^2.3.0",
    "chokidar": "^1.7.0",
    "dot-prop": "^4.2.0",
    "glamor": "^2.20.40",
    "glamorous": "^4.11.0",
    "gray-matter": "^3.1.1",
    "load-json-file": "^4.0.0",
    "meow": "^4.0.0",
    "opn": "^5.1.0",
    "portfinder": "^1.0.17",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "read-pkg": "^3.0.0",
    "read-pkg-up": "^3.0.0",
    "remark": "^8.0.0",
    "remark-react": "^4.0.1",
    "remark-slug": "^4.2.3",
    "styled-components": "^2.2.4",
    "styled-system": "^1.1.0",
    "update-notifier": "^2.3.0",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/dot-prop": "^4.2.0",
    "@types/load-json-file": "^2.0.7",
    "@types/meow": "^4.0.1",
    "@types/opn": "^5.1.0",
    "@types/prop-types": "^15.5.5",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/read-pkg-up": "^3.0.1",
    "@types/styled-components": "^3.0.1",
    "@types/styled-system": "^3.0.4",
    "@types/ws": "^6.0.1",
    "ava": "^0.24.0",
    "dependency-cruiser": "^4.6.0",
    "nyc": "^11.3.0",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  },
  "gen": {
    "title": "Gen",
    "markdownProps": {
      "h1": {
        "mt": 5,
        "color": "tomato"
      }
    }
  }
}
